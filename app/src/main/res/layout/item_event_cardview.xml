<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#DAFAFD"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/ivUserProfile"
            android:layout_width="78dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/tvUsertag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivUserProfile"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/ivUserProfile"
            android:layout_toRightOf="@+id/ivUserProfile"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:textColor="@color/colorPrimaryDark" />


        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/tvEventDesc"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@android:color/white"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_foreground"
            android:visibility="visible"
            tools:background="#000000"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvUsertag"
            android:layout_alignLeft="@+id/tvUsertag"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="-47dp"
            android:layout_marginLeft="-47dp"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivHeart"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/ivHeart"
            android:layout_toRightOf="@+id/ivHeart"
            android:text="Location"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvEventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEventTitle"
            android:layout_alignStart="@+id/tvEventTitle"
            android:layout_alignLeft="@+id/tvEventTitle"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:text="Write a caption..."
            android:textAllCaps="false"
            android:textColor="#090808"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivUserProfile"
            android:layout_alignStart="@+id/ivUserProfile"
            android:layout_alignLeft="@+id/ivUserProfile"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:text="TITLE"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimeOfEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHeart"
            android:layout_marginStart="77dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/tvDate"
            android:layout_toRightOf="@+id/tvDate"
            android:text="Time"
            android:textColor="#5A5858"
            android:textSize="16sp"
            android:textStyle="italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHeart"
            android:layout_alignStart="@+id/ivHeart"
            android:layout_alignLeft="@+id/ivHeart"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="Day"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="73dp"
            android:layout_height="67dp"
            android:layout_below="@+id/ivEventImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/heart_logo_vector"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvTimePosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:layout_alignStart="@+id/ivHeart"
            android:layout_alignLeft="@+id/ivHeart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:autoLink="all"
            android:fontFamily="sans-serif-light"
            android:gravity="start"
            android:text="Date here"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFirstLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivUserProfile"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivUserProfile"
            android:layout_toRightOf="@+id/ivUserProfile"
            android:text="First Last"
            android:textSize="14sp"
            tools:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/ivAnimation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="34dp"
            android:layout_toEndOf="@+id/tvUsertag"
            android:layout_toRightOf="@+id/tvUsertag"
            android:background="@drawable/logo" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

