<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/tvFirstLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:layout_toRightOf="@+id/ivUserProfile"
        android:text="First Last"
        android:textSize="16sp"
        tools:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/tvUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:text="Username"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:textColor="@color/colorPrimaryDark" />


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="visible"
        tools:background="#000000"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_alignLeft="@+id/tvUser"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:text="Location"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime"
        android:layout_alignStart="@+id/tvDay"
        android:layout_alignEnd="@+id/tvTime"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/tvUser"
        android:text="Write a caption..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignStart="@+id/ivProfilePic"
        android:layout_alignEnd="@id/ivImage"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="-34dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@+id/ivDetailsHeart"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDay"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:text="Time"
        android:textColor="#5A5858"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_alignStart="@+id/tvLocation"
        android:layout_alignLeft="@+id/tvLocation"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:text="Day"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ivDetailsHeart"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="698dp"
        android:background="@drawable/heart_logo_vector"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_alignLeft="@+id/ivDetailsHeart"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-368dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="0dp"
        android:autoLink="all"
        android:fontFamily="sans-serif-light"
        android:text="Date here"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibBookmark"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/save"
        android:visibility="visible" />

</RelativeLayout>